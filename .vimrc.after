colorscheme zenburn
set guifont=Inconsolata:h18

set guioptions-=L " hide left scrollbar
set guioptions-=r " hide right scrollbar
set guioptions-=T " hide toolbar

set lines=50

set tabstop=2
set softtabstop=2
set shiftwidth=2

set autoread
set nonumber
set nospell
set nowrap
set statusline=

match ErrorMsg '\%>78v.\+'

if has("gui_macvim")
  set shell=/bin/bash\ -i
endif

autocmd BufRead,BufNewFile *.text set filetype=markdown nonumber
